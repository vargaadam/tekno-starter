{
  "name": "simple-customer-registry-api",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node -L src/index.ts --watch src",
    "test": "mocha -r ts-node/register --exit 'src/**/*.test.ts'",
    "test:watch": "npm run test -- --watch-files 'src/**/*.test.ts' --watch",
    "build": "rimraf ./dist && tsc",
    "knex": "knex --knexfile ./src/db/knexfile.ts",
    "migrate": "npm run knex -- migrate:latest",
    "migrate:down": "npm run knex -- migrate:down",
    "seed": "npm run knex -- seed:run",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "format": "prettier --config .prettierrc src/**/*.ts --write"
  },
  "keywords": [],
  "author": "Adam Varga",
  "license": "ISC",
  "dependencies": {
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "envalid": "^7.1.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "knex": "^0.95.4",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "chai": "^4.3.4",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sinon": "^10.0.0",
    "sinon-chai": "^3.6.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
